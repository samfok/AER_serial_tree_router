        export
        template <pint N>
        defproc N_ARB (globals g; bool i[N], o[N]) {
            // N-way arbiter
            [ N = 1 ->
                i[0] = o[0];
            [] N = 2 ->
                N_ARB_<N> n_arb(g, i, o,,,,);
                prs<g.Vdd, g.GND> {
                    n_arb._po => n_arb.pi-
                }
                OR<N> or(n_arb.co, n_arb.cco);
            [] N > 2 ->
                bool cco;
                N_ARB_<N/2> n_arb0(g, i[0..N/2-1], o[0..N/2-1],,,, cco);
                N_ARB_<N-N/2> n_arb1(g, i[N/2..N-1], o[N/2..N-1],,,, cco);
                _ARB _arb(,);
                _arb._i[0] = n_arb0._po;
                _arb._i[1] = n_arb1._po;
                prs<g.Vdd, g.GND> {
                    _arb._o[0] => n_arb0.pi-
                    _arb._o[1] => n_arb1.pi-
                }
                OR<N> or(, cco);
                or.i[0..N/2-1] = n_arb0.co;
                or.i[N/2..N-1] = n_arb1.co;
            ]
        }

