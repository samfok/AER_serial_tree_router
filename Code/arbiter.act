            prs {
                ~cco & ~_arb._o[0] -> qo[0]+
                g.pReset | cco & _arb._o[0] -> qo[0]-

                ~cco & ~_arb._o[1] -> qo[1]+
                g.pReset | cco & _arb._o[1] -> qo[1]-
            }
        }

